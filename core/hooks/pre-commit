set -e

check_cmd() {
  local cmd=$1
  if command -v "$cmd" &>/dev/null; then
    return 0
  else
    echo "â›”ï¸ $cmd is not available"
    return 1
  fi
}

check_cmd "python3"
check_cmd "pre-commit"

echo "ğŸš€ Running global pre-commit ..."
pre-commit hook-impl \
  --config ~/.config/git/core/pre-commit-config.yml \
  --hook-type=pre-commit \
  --hook-dir="$(pwd)/.git/hooks" \
  -- "$@"

if [ -f ".pre-commit-config.yaml" ]; then
  echo "ğŸš€ Running local pre-commit ..."
  pre-commit hook-impl \
    --config=.pre-commit-config.yaml \
    --hook-type=pre-commit \
    --hook-dir="$(pwd)/.git/hooks" \
    -- "$@"
fi
